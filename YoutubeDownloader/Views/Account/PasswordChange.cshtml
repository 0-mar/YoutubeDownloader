@model YoutubeDownloader.ViewModels.PasswordChangeViewModel

@{
    ViewBag.Title = "Change password";
}

@using (Html.BeginForm("PasswordChange", "Account", new {UserId = ViewData["userId"], Code = ViewData["code"]}))
{
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="NewPassword">Enter new password</label>
        <input asp-for="NewPassword" class="form-control"/>
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmNewPassword">Confirm new password</label>
        <input asp-for="ConfirmNewPassword" class="form-control"/>
        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
    </div>
    <button type="submit">Change password</button>
}
